<p style="color: green"><%= notice %></p>

<% content_for :title, "Players" %>

<h1>Players</h1>

<div id="players">
  <% @players.each do |player| %>
    <%= render player %>
     <% if player.matches.any? %>
        (Matches Played: <%= player.matches.map(&:name).join(', ') %>)
      <% else %>
        No Match Played
      <% end %>
    <p>
      <%= link_to "Show this player", player %>
    </p>
  <% end %>
</div>

<%= link_to "New player", new_player_path %>
